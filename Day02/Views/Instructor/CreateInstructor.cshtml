@model CreateInstructorViewModel
@{
    ViewData["Title"] = "Create Instructor";
}

<h1>Create New Instructor</h1>

<div class="container">
    <form asp-action="create" method="post" class="form" enctype="multipart/form-data">

        <label class="form-label">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model?.Name" required />

        @* <label class="form-label">Image</label>
        <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" value="@Model?.ImageUrl" /> 
        *@
        <div class="form-group">
            <label for="ImageUrl">Choose Image:</label>
            <input type="file" asp-for="ImageUrl" class="form-control" />
        </div>

        <label class="form-label">Salary</label>
        <input type="number" class="form-control" id="Salary" name="Salary" value="@Model?.Salary" required />

        <label class="form-label">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model?.Address" />

        <label class="form-label">Department</label>
        <select name="DepartmentId" class="form-select">
            @foreach (var dept in Model.Departments)
            {
                if (dept.Id == Model.DepartmentId)
                {
                    <option selected value="@dept.Id">@dept.Name</option>
                }
                else
                {
                    <option value="@dept.Id">@dept.Name</option>
                }
            }
        </select>

        <label class="form-label">Course</label>
        <select name="CourseId" class="form-select">
            @foreach (var course in Model.Courses)
            {
                if (course.Id == Model.CourseId)
                {
                    <option selected value="@course.Id">@course.Name</option>
                }
                else
                {
                    <option value="@course.Id">@course.Name</option>
                }
            }
        </select>

        <input type="submit" value="Create" class="btn btn-success mt-3" />

    </form>
</div>