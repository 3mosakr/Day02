@model CreateCourseViewModel

@{
    ViewData["Title"] = "Create New Course";

    SelectList departments = new SelectList(Model.Departments, "Id", "Name");
}

<h1>Create New Course</h1>

<div class="container">
    <form asp-action="saveNew" asp-controller="Course" class="form">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div>
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="Degree" class="form-label"></label>
            <input asp-for="Degree" class="form-control" />
            <span asp-validation-for="Degree" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="MinDegree" class="form-label"></label>
            <input asp-for="MinDegree" class="form-control" />
            <span asp-validation-for="MinDegree" class="text-danger"></span>
        </div>
        
        <div>
            <label asp-for="Hours" class="form-label"></label>
            <input asp-for="Hours" class="form-control" />
            <span asp-validation-for="Hours" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="DepartmentId" class="form-label">Department</label>
            <select asp-for="DepartmentId" class="form-select" asp-items="departments">
                <option value="">-- Select Department --</option>
            </select>
            <span asp-validation-for="DepartmentId" class="text-danger"></span>
        </div>
        

        <input type="submit" value="Create" class="btn btn-primary mt-3"/>
    </form>
</div>

<div>
    <a asp-action="Index" class="btn btn-warning mt-3">Back to List</a>
</div>

@section Scripts {
    <script src="/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}